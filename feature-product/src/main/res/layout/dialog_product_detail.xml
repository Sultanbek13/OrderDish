<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/rd_dialog"
    android:layout_margin="@dimen/margin_standard"
    >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_standard"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:cardBackgroundColor="@color/bg_dishes"
            app:cardCornerRadius="@dimen/rd_standard">
        
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgProductDetail"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/mixed_salad"
                />

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="Рыба с овощами и рисом"
            android:textStyle="bold"
            android:fontFamily="@font/font_style_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_title_detail"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_small"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPriceProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="799 ₽ "
                android:fontFamily="@font/font_style_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_titles"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWeightProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="·380г"
                android:textColor="@color/gray_color_per_percent"
                android:fontFamily="@font/font_style_regular"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecipeProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            tools:text="Рыба маринованная со специями, лимонным соком, соевым соусом и запечeнная в духовке с лучком, томатами и картошечкой под золотистой майонезно-сырной шубкой"
            android:fontFamily="@font/font_style_regular"
            android:textColor="@color/recipe_color"
            android:textSize="@dimen/text_size_title_detail"
            />
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addBasket"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="@drawable/bg_btn"
            android:text="@string/add_the_basket"
            android:textColor="@color/white"
            android:fontFamily="@font/font_style_regular"
            android:textSize="@dimen/text_size_title_detail"
            android:textStyle="bold"
            android:gravity="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>